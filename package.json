{
  "name": "webapp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop streaming-platform",
    "pm2:restart": "pm2 restart streaming-platform",
    "pm2:logs": "pm2 logs streaming-platform --nostream",
    "pm2:delete": "pm2 delete streaming-platform",
    "db:migrate": "psql $DATABASE_URL -f migrations/postgresql/0001_initial_schema.sql",
    "db:seed": "psql $DATABASE_URL -f seed.sql",
    "db:console": "psql $DATABASE_URL",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/health"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.5",
    "@hono/zod-validator": "^0.7.6",
    "dotenv": "^16.4.7",
    "hono": "^4.11.9",
    "hono-rate-limiter": "^0.5.3",
    "pg": "^8.13.1",
    "stripe": "^20.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
